<div class="sectionario">
    <h2 class="ps-4">Adopciones</h2>
</div>
<!-- la seccion de adopciones -->
<div id="adopciones" class="m-3 gap-3 seccione">
    <!-- la idea es luego hacer click en los nombres y que abra una descripcion mas detallada -->
    {{#each adoptable}}
    <div class="card rounded-0" style="width: 18rem;">
        <img src="{{{imagen}}}" class="card-img-top rounded-0" alt="{{nombre}}">
        <div class="card-body">
            <button type="button" class="b-adopt btn btn-outline-success card-title fw-bold" id="a{{i_mas}}"
                onclick="verDetalle('d{{i_mas}}')" style="width: 160px;">{{nombre}}</button>
            <p class="card-text">{{especie}}, {{edad}}</p>
            <p class="card-text text-success fw-light">{{descripcion}}</p>
        </div>
    </div>
    {{/each}}
</div>
<!-- ACA VAN Las tarjetas de Adopciones -->
<div id="detallesAdoptivos">
    {{!-- este tendria que armarse para abrir al elegir arriba --}}
    {{#each adoptable}}
    <div id="d{{i_mas}}" class="oculto">
        <div class="titulo">
            <strong class="me-auto fw-semibold">{{nombre}}</strong>
            <button type="button" class="btn-close fs-5" aria-label="Cerrar"
                onclick="cerrarDetalle('d{{i_mas}}')"></button>
        </div>
        <div class="intramarco text-wrap rounded-0">
            <div class="row">
                <div class="col-5"><img src="{{{bigimagen}}}" alt="{{nombre}}, vista completa"
                        class="img-fluid float-end"></div>
                <div class="col-6">
                    <div class="row-2"><small>{{especie}}, {{edad}}</small></div>
                    <div class="row-6">
                        <p>{{descripcion}}</p>
                    </div>
                    <div class="row-3">
                        <p>
                            {{#if chicos}}
                            <span class="text-success">Puede convivir con niños.</span>
                            {{else}}
                            <span class="text-danger">No apto para casas con niños.</span>
                            {{/if}}
                        </p>
                        <p>
                            {{#if animales}}
                            <span class="text-success">Puede convivir con otros animales.</span>
                            {{else}}
                            <span class="text-danger">No apto para casas con otros animales.</span>
                            {{/if}}
                        </p>
                        <p>
                            {{#if salud}}
                            <span class="text-warning">{{salud}}</span>
                            {{/if}}
                        </p>
                    </div>
                    <div class="row">
                        <a href="/adopciones/link/{{i_mas}}" class="btn btn-success" style="width: inherit;">Quiero adoptar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>