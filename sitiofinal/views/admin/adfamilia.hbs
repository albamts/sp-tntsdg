{{#if error}}
<div>
    <p>{{message}}</p>
    <a href="/admin/adadopciones">Volver a Adm. Adopciones</a>
</div>
{{else}}
<div id="sumarFamilia">
    <div class="card card-body m-5">
        <form action="/admin/adfamilia/agregarf" method="post">
            <div class="mb-3">
                <h3>Registrar adopción</h3>
            </div>
            <div class="mb-3 bg-success-50">
                <label for="i_mas" class="form-label">Adoptará:</label>
                <input type="hidden" class="form-control" id="FormAd" name="i_mas" value="{{i_mas}}">
                <p>{{i_mas}} : {{mascota}}</p>
            </div>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" class="form-control" id="FormName" maxlength="50" name="nombre" required>
            </div>
            <div class="mb-3">
                <label for="apellido" class="form-label">Apellido:</label>
                <input type="text" class="form-control" id="FormAp" maxlength="50" name="apellido"
                    required>
            </div>
            <div class="mb-3">
                <label for="direccion" class="form-label">Dirección:</label>
                <input type="text" class="form-control" id="FormD" name="direccion" maxlength="120"
                    required>
            </div>
            <div class="mb-3">
                <label for="celular" class="form-label">Celular:</label>
                <input type="text" class="form-control" id="FormCel1" placeholder="Cod Area + Numero sin 15" maxlength="50" name="celular"
                    required>
            </div>
            <div class="mb-3">
                <label for="celular_alternativo" class="form-label">Celular Alterno:</label>
                <input type="text" class="form-control" id="FormCel2" maxlength="50" name="celular_alternativo"
                    value="No" required>
            </div>
            <div class="ps-5">
                <button type="submit" class="btn btn-success">Guardar Registro</button>
            </div>
        </form>
    </div>
</div>
{{/if}}